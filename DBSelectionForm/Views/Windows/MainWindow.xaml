<Window x:Class="DBSelectionForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vs="clr-namespace:DBSelectionForm.ViewModels"
        xmlns:l="clr-namespace:DBSelectionForm"
        Title="{Binding Path=Title}" Height="450" Width="800">
    <Window.DataContext>
        <vs:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <StatusBar DockPanel.Dock="Bottom" Grid.Row="3">
                <StatusBarItem MinWidth="150" MaxWidth="300">
                    <TextBlock Text="Поиск элементов"/>
                </StatusBarItem>
                <StatusBarItem>
                    <ProgressBar Width="300" Height="30" Value="66"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
        
    </DockPanel>
</Window>
