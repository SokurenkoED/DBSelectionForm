<Window x:Class="DBSelectionForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vs="clr-namespace:DBSelectionForm.ViewModels"
        xmlns:cmd="clr-namespace:DBSelectionForm.Infastructure.Commands"
        xmlns:l="clr-namespace:DBSelectionForm"
        Title="{Binding Path=Title}" Height="270" Width="600" ResizeMode="NoResize">
    <Window.DataContext>
        <vs:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <StatusBar DockPanel.Dock="Bottom" Grid.Row="4">
                <StatusBarItem MinWidth="150" MaxWidth="300">
                    <TextBlock Text="Поиск элементов"/>
                </StatusBarItem>
                <StatusBarItem>
                    <ProgressBar Width="300" Height="30" Value="66"/>
                </StatusBarItem>
            </StatusBar>
            <Label  HorizontalContentAlignment="Center" Content="Путь до папки с данными" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="30" Width="214" Margin="53,16,0,0" FontSize="16"  />
            <TextBox HorizontalAlignment="Left" Margin="300,25,0,0" Text="{Binding PathToFolder}" VerticalAlignment="Top" Width="237" Height="21"   />

            <Label HorizontalContentAlignment="Center" Content="Имя датчика" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="30" Width="214" Margin="53,10,0,0" FontSize="16" Grid.Row="1" />
            <TextBox HorizontalAlignment="Left" Margin="300,0,0,0" Text="{Binding SensorName}" VerticalAlignment="Center" Width="237" Height="21" Grid.Row="1"  />

            <Label HorizontalContentAlignment="Center" Content="Период времени" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="30" Width="214" Margin="53,12,0,0" FontSize="16" Grid.Row="2" />
            <TextBox HorizontalAlignment="Left" Margin="300,0,0,0" Text="{Binding TimeFrom}" VerticalAlignment="Center" Width="105" Height="21" Grid.Row="2"  />

            <Label Content=" - " HorizontalAlignment="Left"  VerticalAlignment="Top" Height="30" Width="27" Margin="405,9,0,0" FontSize="18" Grid.Row="2" />
            <TextBox HorizontalAlignment="Left" Margin="432,0,0,0" Text="{Binding TimeTo}" VerticalAlignment="Center" Width="105" Height="21" Grid.Row="2"  />

            <Button Content="Создать выборку" HorizontalAlignment="Left" Margin="53,0,0,0" Grid.Row="3" VerticalAlignment="Center" Height="37" Width="200">
                <Button.Command>
                    <cmd:GetDataCommand/>
                </Button.Command>
            </Button>

            <Button Content="Отмена" HorizontalAlignment="Left" Margin="337,0,0,0" Grid.Row="3" VerticalAlignment="Center" Height="37" Width="200">
                <Button.Command>
                    <cmd:CloseApplicationCommand/>
                </Button.Command>
            </Button>

        </Grid>

    </DockPanel>
</Window>
