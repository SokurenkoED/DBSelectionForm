<Window x:Class="DBSelectionForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vs="clr-namespace:DBSelectionForm.ViewModels"
        xmlns:cmd="clr-namespace:DBSelectionForm.Infastructure.Commands"
        xmlns:l="clr-namespace:DBSelectionForm"
        Title="{Binding Path=Title}" Height="600" Width="600" ResizeMode="NoResize">
    <Window.DataContext>
        <vs:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="300"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label  HorizontalContentAlignment="Center" Content="Путь до папки с данными" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="30" Width="214" Margin="53,22,0,0" FontSize="16"  />
            <TextBox HorizontalAlignment="Left" Margin="300,30,0,0" Text="{Binding PathToFolder}" VerticalAlignment="Top" Width="237" Height="21"   />
            <Button Command="{Binding OpenFileDialogCommand}" HorizontalAlignment="Left" Margin="546,30,0,0" VerticalAlignment="Top" Height="21" Width="26"/>

            <Label HorizontalContentAlignment="Center" Content="Имя датчика" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="30" Width="214" Margin="53,17,0,0" FontSize="16" Grid.Row="1" />
            <TextBox HorizontalAlignment="Left" Margin="300,0,0,0" Text="{Binding SensorName}" VerticalAlignment="Center" Width="237" Height="21" Grid.Row="1"  />

            <Label HorizontalContentAlignment="Center" Content="Период времени" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="30" Width="214" Margin="53,18,0,0" FontSize="16" Grid.Row="2" />
            <TextBox HorizontalAlignment="Left" Margin="300,0,0,0" Text="{Binding TimeFrom}" VerticalAlignment="Center" Width="105" Height="21" Grid.Row="2"  />

            <Label Content=" - " HorizontalAlignment="Left"  VerticalAlignment="Top" Height="30" Width="27" Margin="405,17,0,0" FontSize="18" Grid.Row="2" />
            <TextBox HorizontalAlignment="Left" Margin="432,0,0,0" Text="{Binding TimeTo}" VerticalAlignment="Center" Width="105" Height="21" Grid.Row="2"  />

            <Button Command="{Binding GetDataCommand}" Content="Создать выборку" HorizontalAlignment="Left" Margin="53,0,0,0" Grid.Row="4" VerticalAlignment="Center" Height="37" Width="200">
            </Button>

            <Button Command="{Binding ColseApplicationCommand}" Content="Отмена" HorizontalAlignment="Left" Margin="337,0,0,0" Grid.Row="4" VerticalAlignment="Center" Height="37" Width="200">
            </Button>


            <ListBox ItemsSource="{Binding TextInformation}" Grid.Row="3" Margin="10,38,10,10" BorderBrush="Black" FontFamily="Times New Roman" Background="#FFF0F0F0" FontSize="16"/>
            <Label Content=" Информативное окно:" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="580" FontSize="16" FontFamily="Times New Roman"/>
            


        </Grid>

    </DockPanel>
</Window>
